<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/empty_lottie"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:lottie_autoPlay="false"
            app:lottie_fileName="lottie/empty_status.json"
            app:lottie_loop="true"/>
        <LinearLayout
            android:id="@+id/empty_failed_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/empty_failed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:gravity="center"
                android:text="@string/text_empty_failed"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/empty_failed_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:gravity="center"
                />
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/empty_retry_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_btn_retry"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>